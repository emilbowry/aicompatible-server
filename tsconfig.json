{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "baseUrl": ".", // no clue why this if fine for docker
    "paths": {
      "#prisma/client": ["./src/generated/prisma/index"]
    }
}